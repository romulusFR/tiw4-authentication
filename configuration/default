# see http://nginx.org/en/docs/http/ngx_http_ssl_module.html#ssl_password_file
ssl_password_file global.pass;

upstream nodejs {
    zone nodejs 64k;
    server localhost:3000;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2 ipv6only=on;

    include snippets/snakeoil.conf;
    include snippets/ssl_params.conf;
    include snippets/proxy_set_header.conf;

    location / {
       proxy_pass http://nodejs;
    }
}

server {
    listen 80;
    listen [::]:80;
    # https://serverfault.com/questions/67316/in-nginx-how-can-i-rewrite-all-http-requests-to-https-while-maintaining-sub-dom
    return 308 https://$host$request_uri;
}